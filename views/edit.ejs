
<%- layout("./layout/boilerplate.ejs") %>
<% block("head").append('<link rel="stylesheet" href="/edit.css">') %>

<body>
    <div class="containe">
        <div class="header">
            <i class="fab fa-airbnb logo"></i>
            <h1>Edit Hotel Listing</h1>
        </div>
        
        <div class="form-container">
            <form action="http://localhost:8080/hotel/<%=data._id %>?_method=patch" method="POST" novalidate class="needs-validation">
                <div class="form-grid">
                    <div class="form-group">
                        <label for="sellername">
                            <i class="fas fa-user" style="color: #ff385c;"></i>
                            Hotel name
                        </label>
                        <input type="text" name="sellername" id="sellername" value="<%= data.sellername %>" required class="form-control">
                        <div class="valid-feedback">
                         Looks good!
                         </div>
                        <div class="invalid-feedback">
                        hotel name required!
                        </div>
                                  
                    </div>
                    
                    <div class="form-group">
                        <label for="city">
                            <i class="fas fa-city" style="color: #ff385c;"></i>
                            City
                        </label>
                        <input type="text" name="city" id="city" value="<%= data.city %>" class="form-control" required>
                    <div class="valid-feedback">
                         Looks good!
                         </div>
                        <div class="invalid-feedback">
                        city name required!
                        </div>
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="location">
                            <i class="fas fa-map-marker-alt" style="color: #ff385c;"></i>
                            Location
                        </label>
                        <input type="text" name="location" id="location" value="<%= data.location %>" class="form-control" required>
                    <div class="valid-feedback">
                         Looks good!
                         </div>
                        <div class="invalid-feedback">
                        location name required!
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="status">
                            <i class="fas fa-bed" style="color: #ff385c;"></i>
                            Status
                        </label>
                        <select name="status" id="status" class="form-control" required>
                            <option value="available" <%= data.status === 'available' ? 'selected' : '' %>>Available</option>
                            <option value="not available" <%= data.status === 'not available' ? 'selected' : '' %>>Not Available</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="type">
                            <i class="fas fa-home" style="color: #ff385c;"></i>
                            Room Type
                        </label>
                        <select name="type" id="type" class="form-control" required>
                            <option value="single" <%= data.type === 'single' ? 'selected' : '' %>>Single</option>
                            <option value="double" <%= data.type === 'double' ? 'selected' : '' %>>Double</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="sellno">
                            <i class="fas fa-phone" style="color: #ff385c;"></i>
                            Phone Number
                        </label>
                        <input type="tel" name="sellno" id="sellno" value="<%= data.sellno%>" class="form-control" required>
                        <div class="valid-feedback">
                         Looks good!
                         </div>
                        <div class="invalid-feedback">
                        phone number required!
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="price">
                            <i class="fas fa-dollar-sign" style="color: #ff385c;"></i>
                            Price per Night
                        </label>
                        <input type="text" name="price" id="price" value="<%= data.price %>" class="form-control"required>
                        <div class="valid-feedback">
                         Looks good!
                         </div>
                        <div class="invalid-feedback">
                        price required!
                        </div>
                    </div>
                    
                    <div class="form-group full-width">
                        <label for="description">
                            <i class="fas fa-align-left" style="color: #ff385c;"></i>
                            Description
                        </label>
                        <textarea name="description" id="description" class="form-control" required><%= data.description%></textarea>
                        <div class="valid-feedback">
                         Looks good!
                         </div>
                        <div class="invalid-feedback">
                        description required!
                        </div>
                    </div>
                </div>
                
                <div class="bt-group">
                    <button type="submit" class="bt bt-submit">
                        <i class="fas fa-save"></i> Update Listing
                    </button>
                    
                    <a href="http://localhost:8080/hotel" class="bt bt-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
            <% if(user&&data.owner==user._id.toString()) {%>
            <form action="http://localhost:8080/hotel/<%= data._id %>?_method=delete" method="post" onsubmit="return confirm('Are you sure you want to delete this hotel listing? This action cannot be undone.')">
                <div class="bt-group">
                    <button type="submit" class="bt bt-delete">
                        <i class="fas fa-trash"></i> Delete Listing
                    </button>
                </div>
            </form>
            <% } %>

        </div>
    </div>

    <% block("footer").append('<script src="/script.js"></script>') %>
</body>
</html>