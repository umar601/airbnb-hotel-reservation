
<%- layout("./layout/boilerplate.ejs") %>
<%  block("head").append('<link rel="stylesheet" href="/newhotel.css">')%>

<body>
  <div class="form-container">
    <form action="http://localhost:8080/hotel" method="POST" enctype="multipart/form-data" novalidate class="needs-validation">
      <h1>Add New Hotel</h1>
      
      <div class="form-group">
        <label for="sellername">Hotel Name</label>
        <input type="text" name="sellername" id="sellername" placeholder="Enter hotel name" class="form-control" required>
        <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        hotel name required!
        </div>
      </div>
        
  
      <div class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" id="city" placeholder="Enter city" class="form-control" required>
         <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        city required!
        </div>
        
      </div>
      
      <div class="form-group">
        <label for="location">Location</label>
        <input type="text" name="location" id="location" placeholder="Enter location" class="form-control" required>
         <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        location required!
        </div>
      </div>
      
      <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control" required>
          <option value="available">Available</option>
          <option value="not available">Not available</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="type">Type</label>
        <select name="type" id="type" class="form-control" required>
          <option value="single">Single</option>
          <option value="double">Double</option>
        </select>
      </div>
      
      <div class="form-group">
        <label for="sellno">Phone Number</label>
        <input type="number" name="sellno" id="sellno" placeholder="Enter phone number" class="form-control" required>
         <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        phone number required!
        </div>
      </div>
      
      <div class="form-group">
        <label for="price">Price (per night)</label>
        <input type="number" name="price" id="price" placeholder="Enter price" class="form-control" required>
         <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        price required!
        </div>
      </div>
      
      <div class="form-group">
        <label for="images">Upload Images</label>
        <input type="file" name="images" id="images" class="form-control" multiple required>
         <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        files required!
        </div>
      </div>
      
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" placeholder="Enter details..." class="form-control" required></textarea>
         <div class="valid-feedback">
         Looks good!
        </div>
        <div class="invalid-feedback">
        description required!
        </div>
      </div>
      
      <button type="submit">Submit</button>
    </form>
  </div>

  <% block("footer").append('<script src="/script.js"></script>') %>
  
</body>
</html>
