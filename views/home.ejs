<%- layout("./layout/boilerplate.ejs") %>
<% block("head").append('<link rel="stylesheet" href="/home.css">') %>

<body>

  <% if (message && message.length > 0) { %>

      <h5 class="alert alert-success mt-3" style="display: flex; justify-content: space-between;align-items: center;width: 50%;margin: auto;"><%= message %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" s></button></h5>
      
   
  <% } %>
  <div class="container">

    <!-- Header -->
    <div class="header w-100">
      <div class="logo w-50 ">
        <i class="fab fa-airbnb"></i>
        <span>airbnb</span>
      </div>

      <div class="d-flex justify-content-evenly align-items-center w-50 ">
      <form class="search-form" action="/hotel/search" method="POST">
        <input type="search" name="search" class="search-input" placeholder="Search by hotel name or city">
        <button type="submit" class="search-btn">
          <i class="fas fa-search"></i>
        </button>
      </form>
      <% if(!user){ %>
      <a href="/user/login" class="text-decoration-none btn btn-danger opacity-85">login</a>
      <a href="/user/signup"class="text-decoration-none btn btn-danger opacity-85">signup</a>
      <% }else{ %>
      <a href="/user/logout" class="text-decoration-none btn btn-danger opacity-85">logout</a>
      <% } %>
      
      </div>
    </div>

    <!-- Hotels Grid -->
    <% if (allDetails && allDetails.length > 0) { %>
      <div class="hotels-grid">
        <% for(detail of allDetails) { %>
          <div class="hotel-card" onclick="window.location.href='/hotel/view/<%= detail._id %>'">
            <!-- <h3>url<%= detail.images.url[0]%></h3> -->
            <img src="<%= detail.images.url[0] %>" alt="Hotel image" class="hotel-image">
            <div class="hotel-info">
              <div class="hotel-top">
                <span class="hotel-city"><%= detail.city %></span>
                <span class="hotel-price">$<%= detail.price.toLocaleString("en-US")%> / night</span>
              </div>
              <div class="hotel-name"><%= detail.sellername %></div>
              <div class="hotel-actions">
                <% if(user&&detail.owner==user._id.toString()) {%>
                <a href="/hotel/<%= detail._id %>" class="edit-btn">
                  <i class="fas fa-edit"></i> Edit
                </a>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <i class="fas fa-home"></i>
        <p>No hotels found</p>
        <p>Add your first hotel to get started</p>
      </div>
    <% } %>

    <% if(user){ %>
    <a href="/hotel/new" class="add-hotel-btn">
      <i class="fas fa-plus"></i> Add new hotel
    </a>
    <% } %>

  </div>
</body>
</html>
